<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout

    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    tools:context="com.example.android.courtcounter.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:padding="16sp"
        android:gravity="center_horizontal"
        android:fontFamily="sans-serif-mediam"
        android:textColor="#161616"
        android:textSize="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:paddingBottom="24sp"
        android:gravity="center_horizontal"
        android:id="@+id/team_a_score"
        android:fontFamily="sans-serif-light"
        android:textColor="#161616"
        android:textSize="56dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+3points"
        android:layout_marginBottom="8sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:onClick="increase3forA"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+2points"
        android:layout_marginBottom="8sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:onClick="increase2forA"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="free throw"
        android:layout_marginBottom="8sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:onClick="increase1forA"/>

    </LinearLayout>
   <View
       android:layout_width="1dp"
       android:layout_height="match_parent"
       android:background="@android:color/darker_gray"
       android:layout_marginTop="16dp"></View>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:context="com.example.android.courtcounter.MainActivity"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:padding="16sp"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-mediam"
            android:textColor="#161616"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingBottom="24sp"
            android:gravity="center_horizontal"
            android:id="@+id/team_b_score"
            android:fontFamily="sans-serif-light"
            android:textColor="#161616"
            android:textSize="56dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3points"
            android:layout_marginBottom="8sp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="increase3forB"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2points"
            android:layout_marginBottom="8sp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="increase2forB"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="free throw"
            android:layout_marginBottom="8sp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="increase1forB"/>

    </LinearLayout>
</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="reset"
        android:onClick="reset"
        android:layout_marginBottom="8dp"/>
</RelativeLayout>
